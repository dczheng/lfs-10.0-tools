tar xvf $PKGS/grub-2.04.tar.xz \
&& cd grub-2.04 \
&& ./configure --prefix=/usr          \
            --sbindir=/sbin        \
            --sysconfdir=/etc      \
            --disable-efiemu       \
           --disable-werror \
&& make $MKOPT \
&& make install \
&& mv -v /etc/bash_completion.d/grub /usr/share/bash-completion/completions

