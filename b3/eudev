tar xvf $PKGS/eudev-3.2.9.tar.gz \
&& cd eudev-3.2.9 \
&& ./configure --prefix=/usr           \
            --bindir=/sbin          \
            --sbindir=/sbin         \
            --libdir=/usr/lib       \
            --sysconfdir=/etc       \
            --libexecdir=/lib       \
            --with-rootprefix=      \
            --with-rootlibdir=/lib  \
            --enable-manpages       \
            --disable-static \
&& make $MKOPT \
&& mkdir -pv /lib/udev/rules.d \
&& mkdir -pv /etc/udev/rules.d \
&& make install \
&& tar -xvf $PKGS/udev-lfs-20171102.tar.xz \
&& make -f udev-lfs-20171102/Makefile.lfs install

# make check 
