tar xvf $PKGS/texinfo-6.7.tar.xz \
&& cd texinfo-6.7 \
&& ./configure --prefix=/usr --disable-static \
&& make $MKOPT \
&& make check && make install \
&& make TEXMF=/usr/share/texmf install-tex \
&& cd  /usr/share/info \
&& rm -v dir \
&& for f in *
        do install-info $f dir 2>/dev/null
done

