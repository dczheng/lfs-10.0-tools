tar xvf $PKGS/mesa-20.1.5.tar.xz \
&& cd mesa-20.1.5 \
&& sed '1s/python/&3/' -i bin/symbols-check.py \
&& mkdir build \
&& cd    build  \
&& meson --prefix=/usr -Dllvm=false -Dgallium-drivers="i915,iris" -Ddri-drivers="i965"  -Dvulkan-drivers="intel" -Dplatforms="x11,drm"  \
&& ninja \
&& ninja install \
&& install -v -dm755 /usr/share/doc/mesa-20.1.5 \
&& cp -rfv ../docs/* /usr/share/doc/mesa-20.1.5
